<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号设置"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/src_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_left" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公钥"
            android:textSize="@dimen/sp_16" />
        <!--7d082c4f4a4bfd80ae84defaa5f7269d-->

        <!--807dd790dc3db70f7d5cac86e1770c23-->

        <EditText
            android:id="@+id/activity_setting_ed_gongyao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="807dd790dc3db70f7d5cac86e1770c23" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="私钥"
            android:textSize="@dimen/sp_16" />

        <!--3w1oFZHoWEBeEbY1FJ6SZG0VCXW7rekfTOUCFpZRi2pcdQB0bHqViOFD3bUZCIsU-->
        <!--lIVUg6TKBTisHfc1c5X4dJhpEd3XJDo2JY2YO5dOuOd2jG0GCi95G9PvgX9ERkRE-->

        <EditText
            android:id="@+id/activity_setting_ed_siyao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="lIVUg6TKBTisHfc1c5X4dJhpEd3XJDo2JY2YO5dOuOd2jG0GCi95G9PvgX9ERkRE" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_setting_but_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="30dp"
        android:background="@android:color/holo_blue_dark"
        android:text="确认设置" />

</LinearLayout>